<hr id="bootstrap-overrides" />
 <div class="login-dark">
<form method="post">
    <!-- message area -->
    <% if(messages.length > 0) { %>
        <div id="messageArea" class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>

    <h2 class="sr-only">Login Form</h2>
    <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
    <div class="form-group"><input class="form-control" type="username" name="username" placeholder="Username" required></div>
    <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password" required></div>
    <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Log In</button></div>
    <a href="/signup" class="forgot">Don't have an Account yet?</a>
    
</form>
</div>

